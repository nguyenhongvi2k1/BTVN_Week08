<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Title -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="222dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="35dp"
        android:background="#00000000">
        <!-- chevron-left -->
        <View
            android:id="@+id/chevron_lef_gallery"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_baseline_back"
            android:clipToOutline="true" />
        <!-- Gallery -->
        <TextView
            android:id="@+id/gallery"
            android:layout_width="86dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:text="Gallery"
            android:textAppearance="@style/gallery"
            android:textStyle="bold" />
    </RelativeLayout>
    <!-- Images -->
    <RelativeLayout
        android:id="@+id/images"
        android:layout_width="354dp"
        android:layout_height="232dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="#00000000">
        <!-- Pic 1 -->
        <View
            android:id="@+id/pic_1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/pic_1" />
        <!-- Pic 2 -->
        <View
            android:id="@+id/pic_2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="122dp"
            android:background="@drawable/pic_2" />
        <!-- Pic 3 -->
        <View
            android:id="@+id/pic_3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="244dp"
            android:background="@drawable/pic_3" />
        <!-- Pic 4 -->
        <View
            android:id="@+id/pic_4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/pic_4" />
        <!-- Pic 5 -->
        <View
            android:id="@+id/pic_5"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/pic_5" />
        <!-- Pic 6 -->
        <View
            android:id="@+id/pic_6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="244dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/pic_6" />
    </RelativeLayout>
</RelativeLayout>