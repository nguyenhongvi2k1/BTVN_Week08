<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253548">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_changepass"
        android:layout_width="337dp"
        android:layout_height="57dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="84dp"
        android:background="@color/bgButton"
        android:fontFamily="@font/poppins_semibold"
        android:text="Change"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="234dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="512dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/circle2" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="351dp"
        android:layout_height="130dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Password recovery request was successful. Please change your password to continue working."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/textview_backgroud"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_password" />

        <EditText
            android:id="@+id/fg2_Password"
            android:layout_width="295dp"
            android:layout_height="45dp"
            android:background="@null"
            android:drawableRight="@drawable/ic_visibility_off_"
            android:drawablePadding="10dp"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:longClickable="true"
            android:paddingStart="12dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/textview_backgroud"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_password" />

        <EditText
            android:id="@+id/fg2_ConfirmPassword"
            android:layout_width="295dp"
            android:layout_height="45dp"
            android:background="@null"
            android:drawableRight="@drawable/ic_visibility_off_"
            android:drawablePadding="10dp"
            android:hint="Enter confirm  password"
            android:inputType="textPassword"
            android:longClickable="true"
            android:paddingStart="12dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>