<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfd9df"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="411dp"
        android:layout_height="343dp"
        android:background="@drawable/aaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/nomads_avatar"
            app:layout_constraintEnd_toStartOf="@+id/tv_michelle_ng"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/tv_michelle_ng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="51dp"
            android:layout_toEndOf="@+id/imageView"
            android:gravity="center_horizontal|top"
            android:text="@string/michelle_ng"
            android:textAppearance="@style/michelle_ng"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.447" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="348dp"
        android:layout_height="370dp"
        android:background="@drawable/shape_linearlayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.692">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="125dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_offer"
            android:drawableBottom="@drawable/line_xam"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:padding="15dp"
            android:text="Offers and Promo"
            android:textAppearance="@style/my_profile"></TextView>

        <TextView
            android:id="@+id/tvMyProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_account_24"
            android:drawableBottom="@drawable/line_xam"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:padding="15dp"
            android:text="My Profile"
            android:textAppearance="@style/my_profile"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="246dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_setting"
            android:drawableBottom="@drawable/line_xam"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:padding="15dp"
            android:text="Settings"
            android:textAppearance="@style/my_profile"></TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="306dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_help"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:padding="15dp"
            android:text="@string/helps_faqs"
            android:textAppearance="@style/my_profile"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="187dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_payment"
            android:drawableBottom="@drawable/line_xam"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:padding="15dp"
            android:text="Payment Methods"
            android:textAppearance="@style/my_profile"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="66dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_event"
            android:drawableBottom="@drawable/line_xam"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:padding="15dp"
            android:text="My Events"
            android:textAppearance="@style/my_profile"></TextView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

