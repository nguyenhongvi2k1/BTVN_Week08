<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Title -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="355dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="35dp"
        android:background="#00000000">
        <!-- chevron-left -->
        <View
            android:id="@+id/chevron_lef_reviews"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_baseline_back"
            android:clipToOutline="true" />
        <!-- Gallery -->
        <TextView
            android:id="@+id/gallery"
            android:layout_width="86dp"
            android:layout_height="29dp"
            android:layout_marginLeft="150dp"
            android:gravity="bottom"
            android:text="Reviews"
            android:textAppearance="@style/gallery"
            android:textStyle="bold" />
    </RelativeLayout>
    <!-- Reviews -->
    <RelativeLayout
        android:id="@+id/reviews"
        android:layout_width="356dp"
        android:layout_height="472dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="80dp"
        android:background="#00000000">
        <!-- Reviews -->
        <RelativeLayout
            android:id="@+id/view_reviews"
            android:layout_width="356dp"
            android:layout_height="430dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="#00000000">
            <!-- Lele Pons -->
            <RelativeLayout
                android:id="@+id/lele_pons"
                android:layout_width="355dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">
                <!-- User 01c -->
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/user_01c"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/user_01c"
                    android:clipToOutline="true" />
                <!-- Lele Pons -->
                <TextView
                    android:id="@+id/text_lele_pons"
                    android:layout_width="69dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:gravity="top"
                    android:text="Lele Pons"
                    android:textAppearance="@style/lele_pons"
                    android:textStyle="bold" />
                <!-- Rating -->
                <TextView
                    android:id="@+id/rating_lete_pons"
                    android:layout_width="33dp"
                    android:layout_height="19dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right|top"
                    android:text="Rating"
                    android:textAppearance="@style/rating" />
                <!-- star -->
                <View
                    android:id="@+id/star_lete_pons"
                    android:layout_width="62dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/ic_star_blue" />
                <!-- The rooms are very nice. The king bed is soft plus a soft blanket makes sleeping very comfortable -->
                <TextView
                    android:id="@+id/the_rooms_a_lete_pons"
                    android:layout_width="353dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:gravity="top"
                    android:text="@string/the_rooms_a"
                    android:textAppearance="@style/rating" />
                <!-- 3 Hours 43 Minute Ago -->
                <TextView
                    android:id="@+id/hours_43_mi_lete_pons"
                    android:layout_width="137dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:text="3 Hours 43 Minute Ago"
                    android:textAppearance="@style/rating" />
                <!-- Line 7 -->
                <View
                    android:id="@+id/line_7_lete_pons"
                    android:layout_width="355dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="1742dp"
                    android:background="@drawable/line_xam" />
            </RelativeLayout>
            <!-- Miranda -->
            <RelativeLayout
                android:id="@+id/miranda"
                android:layout_width="355dp"
                android:layout_height="91dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:background="#00000000">
                <!-- User 02c -->
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/user_02c_miranda"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/user_02c"
                    android:clipToOutline="true" />

                <!-- Miranda -->
                <TextView
                    android:id="@+id/text_miranda"
                    android:layout_width="59dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:gravity="top"
                    android:text="Miranda"
                    android:textAppearance="@style/miranda"
                    android:textStyle="bold" />

                <!-- Rating -->
                <TextView
                    android:id="@+id/rating_miranda"
                    android:layout_width="33dp"
                    android:layout_height="19dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right|top"
                    android:text="Rating"
                    android:textAppearance="@style/rating" />
                <!-- star -->
                <View
                    android:id="@+id/star_miranda"
                    android:layout_width="62dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/ic_star_blue" />
                <!-- I'm very happy with the view that can be seen from the inside of the hotel -->
                <TextView
                    android:id="@+id/i_m_very_ha"
                    android:layout_width="353dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:gravity="top"
                    android:text="@string/i_m_very_ha"
                    android:textAppearance="@style/i_m_very_ha" />
                <!-- 4 Days Ago -->
                <TextView
                    android:id="@+id/days_ago"
                    android:layout_width="58dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:text="4 Days Ago"
                    android:textAppearance="@style/rating" />
