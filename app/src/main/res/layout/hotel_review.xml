                <View
                    android:id="@+id/line_7_miranda"
                    android:layout_width="355dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="1742dp"
                    android:background="@drawable/line_xam" />
            </RelativeLayout>
            <!-- Adam Levine -->
            <RelativeLayout
                android:id="@+id/adam_levine"
                android:layout_width="355dp"
                android:layout_height="77dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="195dp"
                android:background="#00000000">
                <!-- User 03c -->
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/user_03c_adam"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/user_03a"
                    android:clipToOutline="true" />

                <!-- Adam Levine -->
                <TextView
                    android:id="@+id/text_adam_levine"
                    android:layout_width="93dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:gravity="top"
                    android:text="Adam Levine"
                    android:textAppearance="@style/rating"
                    android:textStyle="bold" />

                <!-- Rating -->
                <TextView
                    android:id="@+id/rating_adam"
                    android:layout_width="33dp"
                    android:layout_height="19dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right|top"
                    android:text="Rating"
                    android:textAppearance="@style/rating" />
                <!-- star -->
                <View
                    android:id="@+id/star_adam"
                    android:layout_width="62dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/star4" />

                <!-- The service is nice but it takes me too long to checkin -->
                <TextView
                    android:id="@+id/the_service"
                    android:layout_width="353dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:gravity="top"
                    android:text="@string/the_service"
                    android:textAppearance="@style/rating" />

                <!-- Last week -->
                <TextView
                    android:id="@+id/last_week"
                    android:layout_width="52dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:text="Last week"
                    android:textAppearance="@style/rating" />
                <!-- Line 7 -->
                <View
                    android:id="@+id/line_7_adam"
                    android:layout_width="355dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="1742dp"
                    android:background="@drawable/line_xam" />
            </RelativeLayout>
            <!-- John -->
            <RelativeLayout
                android:id="@+id/john"
                android:layout_width="354dp"
                android:layout_height="77dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="275dp"
                android:background="#00000000">
                <!-- User 04c -->
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/user_06c_john"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/user_06a"
                    android:clipToOutline="true" />

                <!-- John -->
                <TextView
                    android:id="@+id/text_john"
                    android:layout_width="36dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="44dp"
                    android:gravity="top"
                    android:text="John"
                    android:textAppearance="@style/miranda"
                    android:textStyle="bold" />
                <!-- Rating -->
                <TextView
                    android:id="@+id/rating_john"
                    android:layout_width="33dp"
                    android:layout_height="19dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right|top"
                    android:text="Rating"
                    android:textAppearance="@style/rating" />
                <!-- star -->
                <View
                    android:id="@+id/star_john"
                    android:layout_width="62dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/ic_star_blue" />
                <!-- Very satisfied -->
                <TextView
                    android:id="@+id/very_satisf"
                    android:layout_width="353dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:gravity="top"
                    android:text="@string/very_satisf"
                    android:textAppearance="@style/rating" />

                <!-- Last month -->
                <TextView
                    android:id="@+id/last_month"
                    android:layout_width="58dp"
                    android:layout_height="14dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:text="Last month"
                    android:textAppearance="@style/last_month" />
                <!-- Line 7 -->
                <View
                    android:id="@+id/line_7_john"
                    android:layout_width="355dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="1742dp"
                    android:background="@drawable/line_xam" />
            </RelativeLayout>
            <!-- Amanda -->
            <RelativeLayout
                android:id="@+id/amanda"
                android:layout_width="356dp"
                android:layout_height="77dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="#00000000">
                <!-- User 04c -->
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/user_03c_amanda"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/user_04b"
                    android:clipToOutline="true" />

                <!-- Amanda -->
                <TextView
                    android:id="@+id/text_amanda"
                    android:layout_width="61dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:gravity="top"
                    android:text="Amanda"
                    android:textAppearance="@style/miranda"
                    android:textStyle="bold" />
                <!-- Rating -->
                <TextView
                    android:id="@+id/rating_amanda"
                    android:layout_width="33dp"
                    android:layout_height="19dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right|top"
                    android:text="Rating"
                    android:textAppearance="@style/rating" />
                <!-- star -->
                <View
                    android:id="@+id/star_amanda"
                    android:layout_width="62dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/star3" />
                <!-- Not good enough for me -->
                <TextView
                    android:id="@+id/not_good_en"
                    android:layout_width="353dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="45dp"
                    android:gravity="top"
                    android:text="@string/not_good_en"
                    android:textAppearance="@style/rating" />
                <!-- 2 months ago -->
                <TextView
                    android:id="@+id/months_ago"
                    android:layout_width="71dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:text="2 months ago"
                    android:textAppearance="@style/rating" />
                <!-- Line 7 -->
                <View
                    android:id="@+id/line_7_amanda"
                    android:layout_width="355dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="1742dp"
                    android:background="@drawable/line_xam" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>